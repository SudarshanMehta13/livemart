<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8" >
      <div class="okar9"> ITEMS YOU ARE SELLING
      </div>
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
      <% items.forEach(function(item) { %>
      <div class="w-full md:w-64">
          <img class="h-40 mb-4 mx-auto" src="<%= item.image %>" alt="">
          <div class="text-center">
              <h2 class="mb-4 text-lg"><%= item.name %></h2>
              <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= item.size %></span>
              <div class="flex items-center justify-around mt-6">
                  <form  method="POST" class="w-full max-w-sm">
                      <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3">
                          <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="price" >
                            Price
                          </label>
                        </div>
                        <div class="md:w-2/3">
                          <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  id="price"  type="text"  name="price"  value=<%= item.price%>>
                        </div>
                      </div>
                      <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3">
                          <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="quantity">
                            Quantity
                          </label>
                        </div>
                        <div class="md:w-2/3">
                          <input  class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  id="quantity" type="text"  name="quantity"  value=<%= item.quantity%>   >
                        </div>
                      </div>
                      <input  class="vaibhav " name="id" value=<%= item._id %>>
                      <span>
                          <button  class=" vaibhav1 add-to-cart py-1 px-6 rounded-full flex items-center font-bold " type="submit"  formaction="/updateform" data-item=<% JSON.stringify(item)%> >
                              <span class="ml-4">Update</span>
                          </button>
                          <button  class=" vaibhav1 add-to-cart py-1 px-6 rounded-full flex items-center font-bold " type="submit" formaction="/delete" data-item=<% JSON.stringify(item)%> >
                              <span class="ml-4">Remove</span>
                          </button>
                      </span>
                    </form>
              </div>
          </div>
      </div>
      <% }) %>
  
  </div>
  </section>