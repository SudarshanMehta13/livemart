<script type="text/javascript" src="https://addevent.com/libs/atc/1.6.1/atc.min.js" async defer></script>

<div class="flex items-center justify-center">
    <form action="/offlinecustomer" method ="POST" id="xxx_h" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label for="shops" class="inline-block align-baseline font-bold text-sm">
                Select the shop to visit
            </label>
            <select id="shops" name="shops">
                <option value="volvo">Volvo</option>
                <option value="saab">Saab</option>
                <option value="fiat">Fiat</option>
                <option value="audi">Audi</option>
            </select>
        </div>
